<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- mybatis.xml作用：配置连接数据库的所有需要的环境 ， 必须连接到所有要使用的映射文件。-->  
<configuration>
    <!-- 配置别名：在MyBatis中为一个类取别名，配置别名是为了在对象映射文件中接收参数类型和返回参数类型时使用--> 
	<typeAliases>
		<typeAlias alias="admin" type="com.entity.Admin" /><!-- 管理员表别名为admin 映射类是 com.entity.Admin -->
		<typeAlias alias="cate" type="com.entity.Cate" /><!-- 商品类型表别名为cate 映射类是 com.entity.Cate -->
		<typeAlias alias="measure" type="com.entity.Measure" /><!-- 计量单位表别名为measure 映射类是 com.entity.Measure -->
		<typeAlias alias="goods" type="com.entity.Goods" /><!-- 商品表别名为goods 映射类是 com.entity.Goods -->
		<typeAlias alias="buy" type="com.entity.Buy" /><!-- 商品采购表别名为buy 映射类是 com.entity.Buy -->
		<typeAlias alias="sell" type="com.entity.Sell" /><!-- 商品销售表别名为sell 映射类是 com.entity.Sell -->
		<typeAlias alias="broken" type="com.entity.Broken" /><!-- 商品损失表别名为broken 映射类是 com.entity.Broken -->
	</typeAliases>

	<!-- mappers 标签是用来配置需要加载的 SQL 映射配置文件路径 -->
	<mappers>
		<mapper resource="mapper/admin.xml" /> <!-- 管理员映射文件 -->
		<mapper resource="mapper/cate.xml" /> <!-- 商品类型映射文件 -->
		<mapper resource="mapper/measure.xml" /> <!-- 计量单位映射文件 -->
		<mapper resource="mapper/goods.xml" /> <!-- 商品映射文件 -->
		<mapper resource="mapper/buy.xml" /> <!-- 商品采购映射文件 -->
		<mapper resource="mapper/sell.xml" /> <!-- 商品销售映射文件 -->
		<mapper resource="mapper/broken.xml" /> <!-- 商品损失映射文件 -->
	</mappers>
</configuration>













































